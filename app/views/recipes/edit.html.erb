<h4 class="mb-5 title"><strong>Fodmapレシピを編集</strong></h4>

<div class="new">
  <%= form_with(model: @recipe, local:true) do |f| %>
    <%= render "layouts/error_messages", model: f.object %>

    <div class="container">
      <div class="row">
        <div class="col-sm">
          <%= f.file_field :image, class: 'img_field', style: 'display:none;' %>
          <% if @recipe.image? %>
            <%= image_tag @recipe.image.url, onClick: "$('.img_field').click()", class: 'img-thumbnail img_prev' %>
          <% else %>
            <img src="/assets/sample.png" class="img-thumbnail img_prev" onClick="$('.img_field').click()" >
          <% end %>
        </div>
        <div class="col-sm">
          <div class="box1">
            <strong><%= f.label :title, '料理名', class: "form-label" %></strong>
            <%= f.text_field :title, class: "form-control", placeholder: "タイトル" %>
          </div>
          <div class="box2">
            <strong><%= f.label :description, 'コメント', class: "form-label" %></strong>
            <%= f.text_area :description, placeholder: "コメント", class: "form-control text" %>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-10 offset-md-1">
      <div class="container mt-5">
        <p class="mb-3"><strong>材料</strong></p>
        <div class="mb-3 row">
          <div class="col-2">
            <%= f.number_field :people, class:"form-control people" %>
          </div>
          <label for="inputPassword" class="col-10 col-form-label">人分</label>
        </div>
        <%= f.fields_for :ingredients do |i| %>
          <%= render "ingredient_fields", f: i %>
        <% end %>
        <div class="links">
          <%= link_to_add_association "追加", f, :ingredients, class:"btn botton" %>
        </div>
      </div>
    </div>

    <div class="col-md-10 offset-md-1 mt-5">
      <div class="container mt-3">
        <p class="mb-3"><strong>作り方</strong></p>
        <%= f.fields_for :steps do |s| %>
          <%= render "step_fields", f: s %>
        <% end %>
        <div class="links">
          <%= link_to_add_association "追加", f, :steps, class:"btn botton" %>
        </div>
      </div>
    </div>

    <div class="d-grid gap-2 col-3 mx-auto mt-5 mb-5">
      <%= f.submit '更新', class:"btn btn-success" %>
    </div>
  <% end %>
</div>



<%= javascript_pack_tag 'image_preview' %>