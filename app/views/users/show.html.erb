<div class="container">
  <div class="row">
    <div class="col-sm">
      <h3><strong><%= @user.name %></strong></h3>
      <div class="mt-3 get">
        <span>獲得お気に入り</span><i class="far fa-heart love"></i> <%= @user.total_fav %><br/>
      </div>
    </div>
  </div>
  <div class="row">
  </div>
  <div class="row pt-5">
    <ul class="nav nav-tabs mb-3" id="myTab" role="tablist">
      <li class="nav-item" role="presentation">
        <a class="nav-link active tab-button" id="home-tab" data-bs-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true"><strong>レシピ (<%= @user.recipes.count %>)</strong></a>
      </li>
      <li class="nav-item" role="presentation">
        <a class="nav-link tab-button" id="profile-tab" data-bs-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false"><strong>お気に入り (<%= @user.favorites.count %>)</strong></a>
      </li>
    </ul>
    <div class="tab-content" id="myTabContent">
      <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
        <div class="box" id="makeImg">
          <% @user.recipes.each do |r| %>
            <%= link_to r do %>
              <div class="box-content">
                <%= image_tag r.image.url, class:"recipe-photo" %>
                <p class="recipe-title"><%= r.title %></p>
                <div class="ingredient-box">
                  <% r.ingredients.each do |i| %>
                    <span class="recipe-ingre" ><%= i.name %></span>
                  <% end %>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
      <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
        <div class="box" id="makeImg">
          <% @user.myfavorites.each do |r| %>
            <%= link_to r do %>
              <div class="box-content">
                <%= image_tag r.image.url, class:"recipe-photo" %>
                <p class="recipe-title"><%= r.title %></p>
                <div class="ingredient-box">
                  <% r.ingredients.each do |i| %>
                    <span class="recipe-ingre" ><%= i.name %></span>
                  <% end %>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <% if @user == current_user %>
      <%= link_to "アカウントを削除", @user, method: :delete, class:"btn btn-outline-danger d-grid gap-2 col-sm-4 mx-auto mt-5", data: {confirm: "ユーザー情報や今まで投稿したレシピが全て削除されます。よろしいですか？"}  %>
    <% end %>
  </div>
</div>